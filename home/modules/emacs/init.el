(require 'package)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/") t)
(package-initialize)

(setq debug-on-error t)
(setq inhibit-startup-message t)
(setq custom-file "~/.emacs-custom.el")
(setq backup-directory-alist `(("." . "~/.local/state/emacs")))
(setq delete-old-versions t
  kept-new-versions 6
  kept-old-versions 2
  version-control t)

(defun disable-ui-extras ()
  (menu-bar-mode -1)
  (tool-bar-mode -1)
  (scroll-bar-mode -1))

(defun enable-ui-extras ()
  (menu-bar-mode)
  (tool-bar-mode)
  (scroll-bar-mode))

(defun toggle-relative-line-numbers ()
  (global-display-line-numbers-mode)
  (menu-bar--display-line-numbers-mode-relative))


(defun toggle-full-transparency ()
   (interactive)
   (let ((alpha (frame-parameter nil 'alpha)))
     (set-frame-parameter
      nil 'alpha
      (if (eql (cond ((numberp alpha) alpha)
                     ((numberp (cdr alpha)) (cdr alpha))
                     ;; Also handle undocumented (<active> <inactive>) form.
                     ((numberp (cadr alpha)) (cadr alpha)))
               100)
          '(85 . 50) '(100 . 100)))))

(toggle-relative-line-numbers)
(disable-ui-extras)
(global-set-key (kbd "C-c t") 'toggle-full-transparency)

