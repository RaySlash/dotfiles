(defwidget fullbar []
  (box :orientation "h"
    :class "container"
    (leftbar)
    (title)
    (rightbar)))

(defwidget leftbar []
 (box :orientation "h"
  :halign "start"
  :class "leftbar"
  :space-evenly false
  :spacing 20
  (launcher)
  (workspaces)))

(defwidget rightbar []
  (box :orientation "h"
    :halign "end"
    :class "rightbar"
    :space-evenly false
    :spacing 20
    (internet)
    (volume)
    (clock)))

(defwidget launcher []
  (box :orientation "h"
    :class "launcher" 
  (button :onclick "wofi --show drun -I &"
  " ")))

(defwidget title []
  (box :orientation "h"
    :class "title"
  "${ctitle}"))

(defwidget internet []
  (box :orientation "h"
    :class "internet"
    :spacing 10
    :space-evenly false
    "󰤥" {netssid}))

(defwidget volume []
  (box :orientation "h"
    :class "volume"
    :spacing 10
    :space-evenly false
    (box :spacing 10 :space-evenly false "" {spercent})
    (box :spacing 5 :space-evenly false "󰍬" {mpercent})))

(defwidget clock []
  (box :orientation "h"
    :class "clock"
    :space-evenly false
    :spacing 10
  (button :onclick ""
    date)
  (button :onclick ""
    time)))

(deflisten workspaces :initial "2" "bash ~/.config/eww/scripts/get-workspaces.sh")
(deflisten current_workspace :initial "2" "bash ~/.config/eww/scripts/get-active-workspace.sh")
(defwidget workspaces []
 (eventbox :onscroll "bash ~/.config/eww/scripts/change-active-workspace {} ${current_workspace}" :class "workspaces-widget"
  (box :space-evenly true
   (label :text "${workspaces}${current_workspace}" :visible false)
   (for workspace in workspaces
    (eventbox :onclick "hyprctl dispatch workspace ${workspace.id}"
     (box :class "workspace-entry ${workspace.id == current_workspace ? "current" : ""} ${workspace.windows > 0 ? "occupied" : "empty"}"
      (label :text "${workspace.id}")
     )
    )
   )
  )
 )
 )
