(defpoll date :interval "60" "date '+%a, %d %b'")
(defpoll time :interval "60" "date '+%I:%M %p'")
(defpoll spercent :interval "5" "wpctl get-volume @DEFAULT_AUDIO_SINK@ | sed 's/Volume: //;s/0.00/0/;s/0\\.//;s/\\.//;s/$/%/;s/.* //;s/]%/]/'")
(defpoll mpercent :interval "5" "wpctl get-volume @DEFAULT_AUDIO_SOURCE@ | sed 's/Volume: //;s/0.00/0/;s/0\\.//;s/\\.//;s/$/%/;s/.* //;s/]%/]/'")
(defpoll ctitle :interval "5" "hyprctl activewindow | grep title | sed 's/^.title:\ //' | head -c 80")
(defpoll netip :interval "20" "ip a | grep 'wl' | grep 'inet' | awk '{print $2}' | sed 's/...$//'")
(defpoll netssid :interval "20" "nmcli connection show --active | awk 'FNR == 2 {print $1}'")

(defwindow bar 
  :monitor 1
  :geometry (geometry :x "0%"
            :y "5px"
            :width "99.3%"
            :height "30px"
            :anchor "top center")
  :stacking "overlay"
  :exclusive true
  :focusable false
  :namespace "bar"
(fullbar))

